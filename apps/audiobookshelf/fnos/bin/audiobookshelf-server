#!/bin/sh
APP_DIR="${TRIM_APPDEST}"
APP_DATA_DIR=$1

export CONFIG_PATH="$APP_DATA_DIR/config"
export METADATA_PATH="$APP_DATA_DIR/metadata"
export PORT=13378
export HOST=0.0.0.0
export SOURCE=fnos
export NODE_ENV=production

mkdir -p "$CONFIG_PATH" "$METADATA_PATH"

cd "$APP_DIR" || exit 1
exec "$APP_DIR/audiobookshelf"
